<!-- including header -->
<%- include("partials/header-logins") %>

    <!-- register form -->
    <main class="form-signin">
        <form action="/signin" method="post">
            <img class="profile mb-4 " src="src/profile.jpg" alt="Profile image">
            <h1 class=" h3 mb-3 fw-normal">Sign in</h1>

            <div class="form-floating">
                <input type="text" class="form-control" placeholder="Username" name="username" required>
                <label for="password">Username</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" placeholder="Password" name="password" required>
                <label for="password">Password</label>
            </div>
            <!-- error message when passwords or username don't exist -->
            <p class="error-message">
                <%= errorMessage %>
            </p>

            <button class="w-100 btn btn-lg btn" type="submit">Submit</button>

            <!-- Switch to register site -->
            <a href="/register">
                <p class="switch-method">Don't have an account? Register</p>
            </a>

            <p class="mt-5 mb-3 text-muted">&copy; Amiiika & Co</p>
        </form>
    </main>
<!-- including footer -->
<%- include("partials/footer-logins") %>